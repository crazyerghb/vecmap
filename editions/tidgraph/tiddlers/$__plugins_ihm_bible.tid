        "$:/plugins/ihm/bible/macros/bverse.js": {
            "text": "/*\\\ntitle: $:/plugins/ihm/bible/macros/bref.js\ntype: application/javascript\nmodule-type: macro\n\nMacro to return a formatted version of the current time\n\n\\*/\n(function(){\n\n/*jslint node: true, browser: true */\n/*global $tw: false */\n\"use strict\";\n\n/*\nInformation about this macro\n*/\n\nexports.name = \"bverse\";\n\nexports.params = [\n  {name: \"book\"},\n  {name: \"verse\"},\n  {name: \"bible\"},\n  {name: \"format\"}\n];\n\n/*\nRun the macro\n*/\nexports.run = function(book,verse,bible,format) {\n  var res = \"\";\n  var shownums=false;\n  var verdisp=verse;\n  var vsep=$tw.wiki.getTiddlerText(\"$:/config/ihm/bible/verseSeparator\");\n  \n  //Show verse numbers inline if verse if prefixed by '@'\n  if (verse[0] === \"@\") {\n    shownums = true;\n    verse = verse.slice(1,verse.length);\n    verdisp=verse;\n  } else if (verse[0] === \"#\") {\n    shownums = 'tip';\n    verse = verse.slice(1,verse.length);\n    verdisp=verse;\n  } \n  \n  //Use configured verse separator\n  if (vsep) verdisp=verdisp.replace(/,/g,vsep);\n  \n  bible = bible ||  $tw.wiki.getTiddlerText(\"$:/config/ihm/bible/defaultTranslation\");\n  format = format || \"text\";\n\n  //DEBUG console.log(`bverse ${book},${verse},${bible},${format}`);\n  \n  switch (format) {\n    case \"inline-text\":\n      res = getVerses(book,verse,bible,shownums); \n      res = trim_quote(res,\"inline\")\n      break;\n      \n    case \"text\":\n      res = getVerses(book,verse,bible,shownums);\n      res = trim_quote(res,\"block\");\n      break;\n\n    case \"reflong\":\n      res = $tw.wiki.getTextReference(\"$:/plugins/ihm/bible/books/\"+bible+\"/\"+book+\"##nameLong\");\n      res = res +\". \" +verdisp; \n      res = res + \"(\";\n      res = res +           $tw.wiki.getTextReference(\"$:/plugins/ihm/bible/translations##\"+bible) + \")\";\n      break;\n      \n    case \"refshort\":\n      res = $tw.wiki.getTextReference(\"$:/plugins/ihm/bible/books/\"+bible + \"/\"+book+\"##name\");\n      res = res+\". \"+verdisp+\" (\"+bible+\")\";\n      break;\n      \n    case \"refshorter\":\n      res = $tw.wiki.getTextReference(\"$:/plugins/ihm/bible/books/\"+bible+\"/\"+book+\"##name\");\n      res = res+\". \"+verdisp;\n      break;\n      \n    case \"tip\":\n      var n;\n      var bibles = ($tw.wiki.getTiddlerText(\"$:/config/ihm/bible/translations\") || \"\").split(\" \");\n      var defBible =  $tw.wiki.getTiddlerText(\"$:/config/ihm/bible/defaultTranslation\").trim();\n      //Add default bible if it is not there\n      if ( (bible!=defBible) && (bibles.indexOf(defBible) < 0) )\n         bibles.push(defBible)\n         \n      //Remove bible which is printed in the quote\n      if ((n=bibles.indexOf(bible))>=0)\n         bibles.splice(n,1)\n         \n      //DEBUG  console.log(\"bibles=\",bibles,\"bible=\",bible,\"defBible=\",defBible)\n         \n      //Add quotes and ref from all the bibles   \n      if (bibles) {\n        bibles.forEach(function(b) {\n          res = res + trim_quote(getVerses(book,verse,b,'tip'),'tip');\n          res = res + \" (\" + b + \")\\n\\n\";\n          //DEBUG console.log(\"tip bible b=\",b)\n        });\n      } \n      break;\n  }        \n\n  return res;\n};\n\n  function trim_quote(quote,type) {\n    switch(type) {\n      case \"inline\":\n        //Trim spaces and last dot from quote, replace\n        // end of phrase punctuation with ellipsis\n        quote = quote.replace(/^\\s\\s*/, '').replace(/\\s\\s*$/, '').replace(/\\.$/,'').replace(/(;|,)$/,'&hellip;');\n        break;\n      case \"block\":\n        //Trim spaces and replace end of phrase punctuation\n        //with ellipsis (leaves dot alone)\n        quote = quote.replace(/^\\s\\s*/, '').replace(/\\s\\s*$/, '').replace(/(;|,)$/,'&hellip;');\n      case \"tip\":\n        //Trim spaces and replace end of phrase punctuation\n        //with ellipsis (leaves dot alone)\n        quote = quote.replace(/^\\s\\s*/, '').replace(/\\s\\s*$/, '').replace(/(;|,)$/,'...');\n        break;\n    }\n    return quote;\n  }\n  \n  function getVerses(book,verses,bible,addnums) {\n    //var supnum = [ \"⁻\",\"¹\",\"²\",\"³\",\"⁴\",\"⁵\",\"⁶\",\"⁷\",\"⁸\",\"⁹\"];\n    var v=/(\\d+),(\\d+)-?(\\d*)?,?(\\d*)/.exec(verses);\n    var multichapter = false;\n    if (!v) return \"Wrong verse format: \"+verses;\n  \n    //DEBUG console.log(`getVerse ${book},${verses},${bible},${addnums}`);\n    var ndxs = []; /*dictionary indexes*/\n    if (v[3] === v[1]) { v[3] = v[4]; v[4]=\"\"; }\n    if (v[4] === \"\") { //Verses within same chapter\n      ndxs.push(v[1]+\",\"+v[2]);\n      for(var i=parseInt(v[2])+1;i<=parseInt(v[3]);i++)\n        ndxs.push(v[1]+\",\"+i);\n      \n    } else { //Verses spanning chapters\n      multichapter=true;\n      var avail = $tw.wiki.filterTiddlers(\"[[$:/plugins/ihm/bible/books/\"+bible+\"/\"+book+\"]indexes[]]\");\n      avail = avail.filter(function(ndx) {\n        var match=/(\\d+),(\\d+)/.exec(ndx);\n        if (!match) return false;\n        var availch = parseInt(match[1]),\n            availver = parseInt(match[2]),\n            wantedch1 = parseInt(v[1]),\n            wantedver1 = parseInt(v[2]),\n            wantedch2 = parseInt(v[3]),\n            wantedver2 = parseInt(v[4]);\n        //Verses in starting chapter\n        if (availch === wantedch1 && availver >= wantedver1)\n          return true;\n        //Verses in ending chapter\n        if (availch === wantedch2 && availver <= wantedver2)\n          return true;\n        //Verses in between\n        if (availch > wantedch1 && availch < wantedch2)\n          return true;\n        \n        return false;\n      });\n      //DEBUG console.log(\"avail=\",avail,\"\\naddnums=\",addnums);\n      ndxs = ndxs.concat(avail);\n    } //end of verse spanning chapters\n   \n    ndxs = ndxs.sort(function(a,b) {\n      var na = a.split(\",\"), nb=b.split(\",\");\n      var n1 = parseInt(na[0])*1000 + parseInt(na[1]);\n      var n2 = parseInt(nb[0])*1000 + parseInt(nb[1]);\n      return n1-n2;\n    });\n    \n    var res = [],bold=\"''\",sup=\"^^\",num=\"\";\n    if (addnums=='tip') {\n      bold = \"\"; sup=\"\";\n    }\n    for(var i=0;i<ndxs.length;i++) {\n      if (addnums) {\n        var nums = ndxs[i].split(\",\");\n        if (multichapter && parseInt(nums[1]) == 1)\n          num=sup+bold+nums[0]+bold+\",\"+nums[1]+sup;\n        else \n          num=sup+nums[1]+sup;\n      }\n      var txt =$tw.wiki.getTextReference(\"$:/plugins/ihm/bible/books/\"+bible+\"/\"+book+\"##\"+ndxs[i])\n      //DEBUG console.log(`bible=${bible} book=${book} txt=`,ndxs[i],\" -- \",txt)\n      if (txt) res.push(num+\" \"+txt); \n    }\n    return res.length==0 ? \"-- N/A --\":res.join(\" \");\n    \n  }\n})();",
